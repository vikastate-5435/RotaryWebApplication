@model IEnumerable<EntityModel.BasketItemDetails>

<table class="table table-responsive table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BasketID)
        </th>
        <th style="display:none">
            @Html.DisplayNameFor(model => model.ProductID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SKU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicableFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicableTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KG)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BasketID)
        </td>
        <td style="display:none">
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SKU)
        </td>
        <td>
            @string.Format("{0}/{1}/{2}", item.ApplicableFrom.Day, item.ApplicableFrom.Month, item.ApplicableFrom.Year)
        </td>
        <td>
            @string.Format("{0}/{1}/{2}", item.ApplicableTo.Day, item.ApplicableTo.Month, item.ApplicableTo.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KG)
        </td>
    </tr>
}

</table>
